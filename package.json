{
  "name": "vscode-theme-toggle",
  "displayName": "Theme Toggle",
  "description": "Simple Visual Studio Code theme toggle",
  "version": "0.0.5",
  "engines": {
    "vscode": "^1.96.0",
    "node": ">=20 <22"
  },
  "categories": [
    "Other"
  ],
  "repository": {
    "url": "https://github.com/joaocdfarias/vscode-theme-toggle"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-theme-toggle.toggle",
        "title": "Toggle VS Code Theme"
      }
    ]
  },
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "publisher": "joaocdfarias",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.96.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "eslint": "^9.16.0",
    "typescript": "^5.7.2",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}